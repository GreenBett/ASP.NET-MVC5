@model RestaurantProject.Commandes

@{
    ViewBag.Title = "Edit";
}

<html>
<head>
    <link href="~/Content/StyleSheet1.css" rel='stylesheet' type='text/css' />
</head>
<body background="~/Content/Images/restau.jpg">
    <h2 id="create">Change commande state</h2>

    <section>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Commandes</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_commande)



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.QTT)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id_table)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Idplat)



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        Nouvelle <input type="radio" name="etat" value="nouvelle" />
                        <br />En cours de préparation<input type="radio" name="etat" value="encours" />
                        <br />Servie<input type="radio" name="etat" value="servie" />
                        <br>
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </section>
</body>
</html>